# =============================================================================
# CONFIGURAÇÕES DO SERVIDOR
# =============================================================================
PORT=8080
GIN_MODE=release
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# =============================================================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# =============================================================================
# Para Docker Compose
DB_HOST=postgres
DB_PORT=5432
DB_USER=the_user
DB_PASSWORD=massagem2024@secure
DB_NAME=agendamento_db
DB_SSLMODE=disable
DB_TIMEZONE=America/Sao_Paulo
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=1h

# Para desenvolvimento local (descomente se necessário)
# DB_HOST=localhost
# DB_USER=postgres
# DB_PASSWORD=massagem2024@secure

# =============================================================================
# CONFIGURAÇÕES JWT
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# =============================================================================
# CONFIGURAÇÕES DE EMAIL
# =============================================================================
# Para desenvolvimento, use Mailtrap
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=your_mailtrap_username
SMTP_PASSWORD=your_mailtrap_password
FROM_EMAIL=noreply@agendamento.com
FROM_NAME=Sistema de Agendamento

# Para produção, use um provedor real como Gmail, SendGrid, etc.
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# FROM_EMAIL=noreply@agendamento.com
# FROM_NAME=Sistema de Agendamento

# =============================================================================
# CONFIGURAÇÕES DE LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# Níveis disponíveis: debug, info, warn, error
# Formatos disponíveis: json, console 